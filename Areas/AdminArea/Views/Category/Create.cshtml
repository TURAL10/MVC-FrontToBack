@model CreateCategoryVM
@{
    ViewData["Title"] = "Create";
}
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Category Form</h4>
          
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername1">Name</label>
                    <input asp-for="Name" class="form-control"  placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name" > </span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Desc</label>
                    <input asp-for="Desc" class="form-control"  placeholder="Desc">
                    <span class="text-danger" asp-validation-for="Desc"> </span>
                </div>
               
              
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button  asp-controller="category" asp-action="index"     class="btn btn-light">Go Back</button>
            </form>
        </div>
    </div>
</div>
@section scripts{
  <partial name="_ValidationPartial"/>
}