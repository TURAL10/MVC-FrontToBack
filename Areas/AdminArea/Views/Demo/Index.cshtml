@model List<Book>
@{
    ViewData["Title"] = "index";
}
@if(Model.Count>0)
{
    @foreach(var book in Model)
    {
        <h1>@book.Title</h1>
        @foreach(var bookAuthor in book.BookAuthors)
        {
            <spam>@bookAuthor.Author.Name</spam>
        }
        <hr/>
        @foreach (var bookGenre in book.BookGenres)
        {
            <spam>@bookGenre.Genre.Name</spam>
        }
    }
}
else
{
    <h1>empty list</h1>
}