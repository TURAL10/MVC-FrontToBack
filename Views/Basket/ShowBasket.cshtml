@model List<BasketVM>

@{
    ViewData["Title"] =  "ShowBasket";
} 

@if(Model.Count>0)
{
    <div class="container">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">BasketCount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img width="150" height="150" src="~/img/@item.ImageUrl" /> </td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                <a asp-controller="basket" asp-action="reduce" asp-route-id="@item.Id">-</a>
                                @item.BasketCount
                                <a asp-controller="basket" asp-action="increase" asp-route-id="@item.Id">+</a>
                            </td>
                            <td>
                                
                                <a asp-controller="basket" asp-action="remove" asp-route-id="@item.Id">X</a>
                                </td>
                              
                            </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
}

else
{
<h1><a asp-controller="home" asp-action="index">Go To Home Page</a></h1>
}