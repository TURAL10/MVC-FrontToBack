@model List<Product>
@{
    ViewData["Title"] = "index";

}
<div class="container">
    <div class="row" id="productList">
        <input id="productCount" type="hidden" value="@ViewBag.ProductCount" />
        @foreach (var product in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
                    <div class="img">
                        <a href="">
                            <img src="~/img/@(product.ProductImages.FirstOrDefault(i=>i.IsMain)!=null?product.ProductImages.FirstOrDefault(i=>i.IsMain).ImageUrl:"avatar.jpg")" class="img-fluid" alt="">
                        </a>
                    </div>
                    <div class="title mt-3">
                        <h6>@product.Name</h6>
                    </div>
                    <div class="price">
                        <span class="text-black-50">Add to cart</span>
                        <span class="text-black-50">@product.Price</span>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row justify-content-center">

        <button id="loadMorebtn" class="btn btn-success ">Load More</button>
    </div>



</div>


